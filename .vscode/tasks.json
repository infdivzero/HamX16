{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build HamX16",
            "command": "gcc",
            "args": [
                //Basic
                "-g",
                "-Wall",
                "-std=c11",
                //Include paths
                "-I${workspaceFolder}\\inc",
                //Sources
                "${workspaceFolder}\\main.c",
                "${workspaceFolder}\\inc\\ini.c",
                //Out
                "-o",
                "${workspaceFolder}\\HamX16.exe",
                "-static"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}
