//Countdown v3

dat g1; 3000 //total milliseconds
dat g2; 3000 //original value
dat g3; 1000

#loop:
	mov tim, tmp
	sub g1, tim
	mov acc, g1
	clr tim
	
	mov g1, tmp
	cmp 0
	jnal #end
	
	cmp g1, g2
	jal #end
	
	div g1, g3
	add acc, one
	deb acc
	
	jmp #loop

#end: hlt

#data:
	dat tmp; 123
	deb tmp
	mem #loop
