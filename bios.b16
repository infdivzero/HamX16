//Countdown timer v3

dat g1; 4000 //total milliseconds
dat g2; 1000

dat g3; 123

//Store some stuff in ram
dat g4; deb g3 		//instruction
dat g5; 0x0002 		//address in ram
svd g4, g5	   		//save instruction in ram
dat g4; mem #cont
dat g5; 0x0004
svd g4, g5

#loop:
	mov tim, tmp
	cmp 0
	jeq #skip
	
	sub g1, tim
	mov acc, g1
	clr tim
	
	#skip:
	mem 0
	#cont:
	
	div g1, g2
	deb acc
	
	mov g1, tmp
	cmp 300
	jnal #end
	jmp #loop

#end: hlt
